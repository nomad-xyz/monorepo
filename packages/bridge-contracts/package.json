{
  "name": "@nomad-xyz/bridge-contracts",
  "devDependencies": {
    "@nomad-xyz/deploy": "0.1.2",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "7.2.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.14",
    "chai": "^4.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.20.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.4.4",
    "hardhat": "^2.6.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.1.0",
    "typechain": "^5.0.0",
    "typescript": "^4.5.5"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "version": "1.2.0",
  "description": "A bridge using nomad",
  "scripts": {
    "bootstrap": "yarn clean && yarn build",
    "clean": "hardhat clean && rm -rf lib && rm -rf src",
    "prepublish": "yarn bootstrap && yarn build",
    "build": "yarn compile && hardhat prepare-package && tsc --build && yarn copy-definitions",
    "copy-definitions": "cp src/*.d.ts lib/src",
    "prettier": "prettier --write './contracts'",
    "compile": "hardhat compile",
    "lint": "solhint contracts/*.sol",
    "lint:fix": "solhint --fix contracts/*.sol"
  },
  "author": "James Prestwich",
  "license": "MIT OR Apache-2.0",
  "dependencies": {
    "@nomad-xyz/core-contracts": "1.2.0",
    "@nomad-xyz/router-contracts": "1.2.0",
    "@openzeppelin/contracts": "~3.4.2",
    "@openzeppelin/contracts-upgradeable": "~3.4.2",
    "@summa-tx/memview-sol": "^2.0.0"
  }
}
