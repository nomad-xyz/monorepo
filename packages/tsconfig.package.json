{
  "exclude": ["**/dist/**", "**/node_modules/**", "**/tests/**"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true
  },
  "references": [
    {
      "path": "./contracts-core"
    },
    {
      "path": "./contracts-router"
    },
    {
      "path": "./contracts-bridge"
    },
    {
      "path": "./deploy"
    },
    {
      "path": "./local-environment"
    },
    {
      "path": "./multi-provider"
    },
    {
      "path": "./sdk"
    },
    {
      "path": "./sdk-govern"
    },
    {
      "path": "./sdk-bridge"
    },
    {
      "path": "./indexer"
    },
    {
      "path": "./keymaster"
    }
  ]
}
