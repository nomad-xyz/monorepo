{
  "name": "@nomad-xyz/indexer",
  "version": "0.1.2",
  "private": true,
  "description": "A tool that indexes Nomad Events from one or more blockchains",
  "license": "Apache 2.0",
  "author": "Illusory Systems Inc.",
  "scripts": {
    "docker:build": "docker-compose build --build-arg GIT_COMMIT=$(git rev-parse --short HEAD)",
    "docker:down": "docker-compose down",
    "docker:release": "docker buildx build --build-arg GIT_COMMIT=$(git rev-parse --short HEAD) --platform=linux/amd64,linux/arm64 --push -t=gcr.io/nomad-xyz/nomad-indexer:sha-$(git rev-parse --short HEAD) .",
    "docker:stop": "docker-compose stop",
    "docker:up": "docker-compose up",
    "lint": "eslint --fix ./src",
    "prisma:all": "yarn prisma:migrate && yarn prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "run:all": "NODE_OPTIONS=--max-old-space-size=4096 yarn run:core && yarn run:api",
    "run:api": "ts-node ./api/index.ts",
    "run:core": "PROGRAM=core ts-node main",
    "start": "yarn start:legacy",
    "start:all": "yarn prisma:migrate && yarn run:all",
    "start:any": "NODE_OPTIONS=--max-old-space-size=4096 ts-node main",
    "start:api": "yarn prisma:all && yarn run:api",
    "start:core": "yarn prisma:all && yarn run:core",
    "start:legacy": "yarn prisma:all && yarn start:any",
    "test": "echo TODO",
    "test:load": "element run ./load-tests/get-events.ts --mu"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.5",
    "@nomad-xyz/contracts-bridge": "1.1.0",
    "@nomad-xyz/multi-provider": "1.1.0",
    "@nomad-xyz/sdk": "2.1.0",
    "@nomad-xyz/sdk-bridge": "1.1.0",
    "@nomad-xyz/sdk-govern": "1.1.0",
    "@prisma/client": "^3.14.0",
    "@sentry/node": "^7.1.1",
    "@sentry/tracing": "^7.1.1",
    "@types/bunyan": "^1.8.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/redis": "^4.0.11",
    "apollo-server": "3.9.0",
    "apollo-server-core": "3.9.0",
    "apollo-server-express": "3.9.0",
    "axios": "^0.26.0",
    "bunyan": "^1.8.15",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "express": "^4.17.2",
    "express-prom-bundle": "^6.4.1",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "limiter": "^2.1.0",
    "p-limit": "^3.1.0",
    "prisma": "^3.14.0",
    "prom-client": "^14.0.0",
    "redis": "^4.0.4",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.4.0",
    "type-graphql": "^1.1.1",
    "typegraphql-prisma": "^0.20.3",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "element-cli": "^2.0.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.4.1",
    "react": "^18.1.0"
  }
}
