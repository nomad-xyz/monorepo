{
  "name": "@nomad-xyz/indexer",
  "version": "0.1.1",
  "private": true,
  "description": "Indexer",
  "license": "Apache 2.0",
  "author": "Illusory Systems Inc.",
  "scripts": {
    "any": "NODE_OPTIONS=--max-old-space-size=4096 ts-node main",
    "api": "PROGRAMM=api ts-node main",
    "build": "prisma generate",
    "build_docker": "docker-compose build --build-arg GIT_COMMIT=$(git rev-parse --short HEAD)",
    "core": "PROGRAMM=core ts-node main",
    "lint": "eslint --fix ./src",
    "migrate": "prisma db push",
    "release-docker": "docker buildx build --build-arg GIT_COMMIT=$(git rev-parse --short HEAD) --platform linux/amd64,linux/arm64 --push -t gcr.io/nomad-xyz/nomad-indexer:sha-$(git rev-parse --short HEAD) .",
    "start": "npm run migrate && npm run any"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.5",
    "@nomad-xyz/contracts-bridge": "1.0.0-rc.2",
    "@nomad-xyz/multi-provider": "^1.0.0-rc.4",
    "@nomad-xyz/sdk": "^2.0.0-rc.17",
    "@nomad-xyz/sdk-bridge": "^1.0.0-rc.17",
    "@nomad-xyz/sdk-govern": "^1.0.0-rc.17",
    "@prisma/client": "^3.14.0",
    "@types/bunyan": "^1.8.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/redis": "^4.0.11",
    "apollo-server": "3.7.0",
    "apollo-server-core": "3.7.0",
    "apollo-server-express": "3.7.0",
    "axios": "^0.26.0",
    "bunyan": "^1.8.15",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "express": "^4.17.2",
    "express-prom-bundle": "^6.4.1",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "limiter": "^2.1.0",
    "p-limit": "^3.1.0",
    "prisma": "^3.14.0",
    "prom-client": "^14.0.0",
    "redis": "^4.0.4",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.4.0",
    "type-graphql": "^1.1.1",
    "typegraphql-prisma": "^0.20.3",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.4.1"
  }
}
