{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./config",
    "./scripts",
    "./tmp.ts"
  ],
  "include": [
    "./src/*.ts",
    "./src/contracts-core/*.ts",
    "./src/contracts-bridge/*.ts",
    "./src/verification/*.ts",
    "./src/incremental/*.ts"
  ],
  "references": [
    { "path": "../sdk" },
    { "path": "../contracts-core" },
    { "path": "../contracts-bridge" },
    { "path": "../contracts-router" },
    { "path": "../sdk-bridge" },
    { "path": "../sdk-govern" },
    { "path": "../multi-provider" }
  ]
}
