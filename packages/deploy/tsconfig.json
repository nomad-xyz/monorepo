{
  "extends": "../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "rootDir": "./src/"
  },
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./config/",
    "./scripts/",
    "./tmp.ts"
  ],
  "include": [
    "./src/*.ts",
    "./src/core-contracts/*.ts",
    "./src/bridge-contracts/*.ts",
    "./src/verification/*.ts",
    "./src/incremental/*.ts"
  ],
  "references": [
    { "path": "../sdk" },
    { "path": "../core-contracts" },
    { "path": "../bridge-contracts" },
    { "path": "../router-contracts" },
    { "path": "../sdk-bridge" },
    { "path": "../sdk-govern" },
    { "path": "../multi-provider" }
  ]
}
