{
    "extends": "../tsconfig.package.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "composite": true
    },
    "exclude": [
      "./node_modules",
      "./dist",
      "./src/tmp.ts"
    ],
    "include": [
      "./src/*.ts",
      "src/contracts/*.ts",
      "src/domains/*.ts",
      "src/events/*.ts",
      "src/messages/*.ts",
      "src/tokens/*.ts",
      "src/govern/*.ts"
    ],
    "references": [
      { "path": "../contracts-core" },
      { "path": "../contracts-bridge" },
      { "path": "../multi-provider" }
    ]
  }