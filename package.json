{
  "private": true,
  "name": "@nomad-xyz/contracts",
  "workspaces": [
    "packages/core",
    "packages/router",
    "packages/bridge",
    "packages/example-xapps",
    "packages/deploy",
    "packages/monitor",
    "packages/multi-provider",
    "packages/sdk",
    "packages/sdk-bridge",
    "packages/sdk-govern"
  ],
  "scripts": {
    "bridge": "yarn workspace @nomad-xyz/bridge-contracts",
    "core": "yarn workspace @nomad-xyz/core-contracts",
    "deploy": "yarn workspace @nomad-xyz/deploy",
    "example-xapps": "yarn workspace @nomad-xyz/example-xapp-contracts",
    "router": "yarn workspace @nomad-xyz/router-contracts",
    "monitor": "yarn workspace @nomad-xyz/monitor",
    "multi-provider": "yarn workspace @nomad-xyz/multi-provider",
    "sdk": "yarn workspace @nomad-xyz/sdk",
    "sdk-bridge": "yarn workspace @nomad-xyz/sdk-bridge",
    "sdk-govern": "yarn workspace @nomad-xyz/sdk-govern",
    "prettier": "yarn workspaces foreach -Apv run prettier",
    "lint": "yarn workspaces foreach -Apv run lint",
    "test": "yarn workspaces foreach -Apv run test",
    "build": "yarn workspaces foreach -Atv --exclude @nomad-xyz/deploy run build",
    "compile": "yarn workspaces foreach -Apv --exclude @nomad-xyz/deploy run compile",
    "bootstrap": "yarn workspaces foreach -Apv --exclude @nomad-xyz/deploy --exclude @nomad-xyz/example-xapps run bootstrap"
  },
  "packageManager": "yarn@3.1.1"
}
